<div class="container">
  <h2><%= t('.sign_in') %></h2>

  <form class="row g-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="col-md-6">
        <%= f.label :email, {class: 'col-sm-2 col-form-label'} %>
        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", placeholder: 'Emailアドレスを入力してください' %>
      </div>

      <div class="col-md-6">
        <%= f.label :password, {class: 'col-sm-2 col-form-label'} %>
        <%= f.password_field :password, class: 'form-control', autocomplete: "current-password", placeholder: 'パスワードを入力してください' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="col-12">
          <div class="form-check">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end %>

      <div class="col-12">
        <div class="actions">
          <%= f.submit t('.sign_in') %>
        </div>
      </div>
    <% end %>
  </form>

  <div class="row">
    <div class="col">
      <%= render "devise/shared/links" %>
    </div>
    <div class="col">
      <%= link_to('ゲスト(一般)ログイン', users_guest_sign_in_path, method: :post, class: "btn btn-outline-primary me-2") %>
    </div>
    <div class="col">
      <%= link_to('ゲスト(管理者)ログイン', users_guest_admin_sign_in_path, method: :post, class: "btn btn-outline-primary me-2") %>
    </div>
  </div>
</div>